{
  "name": "auth-service",
  "version": "1.0.0",
  "description": "Authentication and authorization microservice for xshopai platform.",
  "main": "src/server.js",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/xshopai/auth-service.git"
  },
  "keywords": [
    "xshopai",
    "auth",
    "microservice",
    "node",
    "express"
  ],
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/xshopai/auth-service/issues"
  },
  "homepage": "https://github.com/xshopai/auth-service#readme",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "debug": "node --inspect=9229 src/server.js",
    "start:dapr": "dapr run --app-id auth-service --app-port 8003 --dapr-http-port 3500 --dapr-grpc-port 50001 --log-level warn --config ./.dapr/config.yaml --resources-path ./.dapr/components -- node src/server.js",
    "dev:dapr": "dapr run --app-id auth-service --app-port 8003 --dapr-http-port 3500 --dapr-grpc-port 50001 --log-level warn --config ./.dapr/config.yaml --resources-path ./.dapr/components -- nodemon src/server.js",
    "debug:dapr": "dapr run --app-id auth-service --app-port 8003 --dapr-http-port 3500 --dapr-grpc-port 50001 --log-level warn --config ./.dapr/config.yaml --resources-path ./.dapr/components -- node --inspect=9229 src/server.js",
    "test": "jest",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration --runInBand",
    "test:e2e": "jest tests/e2e --runInBand --testTimeout=30000",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "dependencies": {
    "@azure/monitor-opentelemetry": "^1.8.0",
    "@dapr/dapr": "^3.6.1",
    "@opentelemetry/auto-instrumentations-node": "^0.69.0",
    "@opentelemetry/exporter-zipkin": "^2.5.0",
    "@opentelemetry/exporter-trace-otlp-http": "^0.57.2",
    "@opentelemetry/resources": "^2.5.0",
    "@opentelemetry/sdk-node": "^0.211.0",
    "@opentelemetry/semantic-conventions": "^1.39.0",
    "amqplib": "^0.10.4",
    "bcrypt": "^6.0.0",
    "cookie-parser": "^1.4.7",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.0",
    "uuid": "^11.1.0",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.28.3",
    "@microsoft/eslint-formatter-sarif": "^3.1.0",
    "babel-jest": "^30.0.2",
    "cross-env": "^10.1.0",
    "dotenv-cli": "^8.0.0",
    "eslint": "^9.12.0",
    "jest": "^30.0.0",
    "node-mocks-http": "^1.17.2",
    "nodemon": "^3.1.10",
    "supertest": "^7.1.4"
  }
}
